# Base de datos Neon (PostgreSQL)
# Obtén esta URL desde el panel de Neon después de crear tu proyecto
DATABASE_URL=postgresql://usuario:password@host.neon.tech/dbname?sslmode=require

# JWT Secret - Genera una cadena aleatoria segura (mínimo 32 caracteres)
# Puedes usar: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=tu_jwt_secret_aqui_muy_largo_y_seguro_123456789

# URL base de la aplicación (sin slash al final)
# Cambia esto a tu URL de Render cuando hagas deploy
BASE_URL=http://localhost:3000

# Puerto del servidor
PORT=3000
